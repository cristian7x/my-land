<% include ./partials/header %>
<div class="row">
   <h1 class="text-center">Forgot Password</h1>
   <div class="div-center"">
      <form action="/forgot" method="POST">
         <div class="form-group">
            <label for="forgot-email">Email</label>
            <input id="forgot-email" class="form-control" type="text" name="email" placeholder="user@email.com" autofocus>
         </div>
         <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Reset Password">
         </div>   
      </form>
      <div class="login-help">
         <a href="/signup">Register</a> - <a href="/login">Login</a>
      </div>
   </div>
</div>
<% include ./partials/footer %>