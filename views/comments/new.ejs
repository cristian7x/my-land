<% include ../partials/header %> 
<div class="row">
   <h1 class="text-center">Add Comment to <%= landscape.name %></h1>
   <div class="div-center"">
      <form action="/landscapes/<%= landscape._id %>/comments" method="POST">
         <div class="form-group">
            <label for="comment-new-text">Text:</label>
            <input id="comment-new-text" class="form-control" type="text" name="text" maxlength="100" autofocus required>
         </div>
         <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Comment</button>
         </div>
      </form>
      <a href="/landscapes/<%= landscape._id %>">Go Back</a>
   </div>      
</div>
<% include ../partials/footer %>