<% include ./partials/header.ejs %>
<div class="row my-3">
  <div class="col-md-12 text-center mb-3">
    <h1>Sign Up</h1>
  </div>
  <div class="m-auto">
    <div class="row mb-2">
      <div class="col-md-6 mb-2">
        <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook">
          <span class="fab fa-facebook"></span>Facebook
        </a>
      </div>
      <div class="col-md-6 mb-2">
        <a href="/auth/google" class="btn btn-block btn-social btn-google">
          <span class="fab fa-google"></span>Google
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col"><hr></div>
      <div class="col-auto"><p class="text-muted">OR</p></div>
      <div class="col"><hr></div>
    </div> 
    <form id="signup" action="/signup" method="POST" autocomplete="off">
      <div class="form-group">
        <label for="signup-email" class="col-form-label"><strong>Email</strong></label>
        <input id="signup-email" class="form-control" type="email" name="email" placeholder="user@email.com" maxlength="30" required>
      </div>
      <div class="form-group">
        <label for="signup-username" class="col-form-label"><strong>Username</strong></label>
        <input id="signup-username" class="form-control" type="text" name="username" placeholder="Username" maxlength="30" required>
      </div>       
      <div class="form-group">
        <label for="signup-password" class="col-form-label"><strong>Password</strong></label>
        <input id="signup-password" class="form-control" type="password" name="password" placeholder="Create password" required>
      </div>
      <div class="form-group">
        <label for="signup-fullname" class="col-form-label"><strong>Full Name (Optional)</strong></label>
        <input id="signup-fullname" class="form-control" type="text" name="fullName" placeholder="John Doe" maxlength="50">
      </div>
      <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
    </form>
    <hr>
    <div class="login-help text-center mt-2">
      <a href="/login">Login</a> | <a href="/landscapes">Go Back</a>
    </div>  
    <hr>
    <div class="form-group">
      <label for="signup-admin-code" class="col-form-label"><strong>Admin Code (Only for administrators)</strong></label>
      <input id="signup-admin-code" form="signup" class="form-control" type="text" name="isAdmin" placeholder="Admin code" maxlength="20">
    </div>
  </div>
</div>
<% include ./partials/footer.ejs %>