<% include ./partials/header.ejs %>
<div class="row mb-5">
  <div class="col-md-12 text-center mb-3">
    <h1>Update Password</h1>
  </div>
  <div class="m-auto col-lg-3 col-md-4 col-sm-5 col-8">  
    <form action="/reset/<%= token %>" method="POST">
      <div class="form-group">
        <label for="reset-password" class="col-form-label"><strong>New password</strong></label>
        <input id="reset-password" class="form-control" type="password" name="password" placeholder="New password" autofocus required>
      </div>
      <div class="form-group">
        <label for="reset-confirm" class="col-form-label"><strong>Re-type password</strong></label>
        <input id="reset-confirm" class="form-control" type="password" name="confirm" placeholder="Confirm password" required>
      </div>
      <button type="submit" class="btn btn-primary btn-block">Update</button> 
    </form>
  </div>
</div>
<% include ./partials/footer.ejs %>