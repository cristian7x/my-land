<% include ./partials/header.ejs %>
<div class="row">
   <h1 class="text-center">Login</h1>
   <div class="div-center"">
      <form action="/reset/<%= token %>" method="POST" autocomplete="off">
         <div class="form-group">
            <label for="reset-password">New Password:</label>
            <input id="reset-password" class="form-control" type="password" name="password" placeholder="New Password" autofocus required>
         </div>
         <div class="form-group">
            <label for="reset-confirm">Confirm Password:</label>
            <input id="reset-confirm" class="form-control" type="password" name="confirm" placeholder="Confirm Password" required>
         </div>
         <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Update Password">
         </div>   
      </form>
   </div>
</div>
<% include ./partials/footer.ejs %>