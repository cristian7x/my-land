<% include ../partials/header %>
<div class="row my-6">
  <div class="col-md-12 text-center mb-3">
    <h1>Edit: <%=landscape.name%></h1>    
  </div>
  <div class="m-auto col-lg-4 col-md-5 col-sm-6 col-10">
    <form action="/landscapes/<%= landscape._id %>?_method=PUT" method="POST" autocomplete="off" enctype="multipart/form-data">
      <div class="form-group">
        <label for="landscape-edit-name" class="col-form-label"><strong>Name</strong></label>
        <input id="landscape-edit-name" class="form-control" type="text" name="name" value="<%= landscape.name %>" maxlength="50" autofocus required>
      </div>
      <div class="form-group">
        <label for="landscape-edit-location" class="col-form-label"><strong>Location</strong></label>
        <input id="landscape-edit-location" class="form-control" type="text" name="location" value="<%= landscape.location %>" maxlength="50" required>
      </div>
      <div class="form-group">
        <label for="landscape-edit-price" class="col-form-label"><strong>Entrance Fee</strong></label>
        <input id="landscape-edit-price" class="form-control" type="number" name="entranceFee" value="<%= landscape.entranceFee %>" min="0.1" step="0.1">
      </div>
      <div class="form-group">
        <label for="landscape-edit-description" class="col-form-label"><strong>Description</strong></label>
        <textarea class="form-control" name="description" id="landscape-edit-description" rows="5" maxlength="600"><%= landscape.description %></textarea>
      </div>
      <div class="form-group">      
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="inputGroupFile" name="image" accept="image/*">
          <label class="custom-file-label" for="inputGroupFile">Choose Image</label>
        </div>
      </div>
      <button class="btn btn-primary btn-block">Update</button>
    </form>
    <div class="login-help text-center mt-3">
      <a href="/landscapes/<%= landscape._id %>">Go Back</a>
    </div>
  </div>
</div>
<script>
  $('#inputGroupFile').change(function(e){
    let fileName = e.target.files[0].name;
    if(fileName) $('.custom-file-label').html(fileName);
  });
</script>
<% include ../partials/footer %>