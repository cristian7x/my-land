<% include ../partials/header %>
<% if(currentUser && currentUser.isAdmin){ %>
   <h1>Admin</h1>
<% } %>     
<header class="jumbotron">
   <div class="container">    
      <h1><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> Welcome To MyLand!</h1>
      <p>View our hand-picked landscapes from all over the world</p>
      <a class="btn btn-primary btn-lg" href="/landscapes/new">Add New Landscape</a>
   </div>
</header>

<div id="landscape-index" class="row text-center">
   <% landscapes.forEach((landscape) => { %>
      <div class="col-md-3 col-sm-6">
         <div class="thumbnail">
            <img class="img-thumbnail" src="<%= landscape.image %>">
            <div class="caption">
               <h4><%= landscape.name %></h4>
            </div>
            <p><a href="/landscapes/<%= landscape._id %>" class="btn btn-primary">More Info</a></p>
         </div>
      </div>
   <% }); %>
</div>
<% include ../partials/footer %>